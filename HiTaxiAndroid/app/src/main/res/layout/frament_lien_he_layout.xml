<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="inherit"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtEmailView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:text="Email :" />

    <TextView
        android:id="@+id/txtshowEmaillllll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_toRightOf="@+id/txtEmailView"
        android:text="hitaxi2017@gmail.com" />

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmailView"
        android:layout_marginTop="15dp"
        android:text="Tiêu Để : " />

    <EditText
        android:id="@+id/edtTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtshowEmaillllll"
        android:layout_toRightOf="@+id/txtEmailView" />

    <TextView
        android:id="@+id/txtShowwYKien"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTieuDe"
        android:layout_marginTop="15dp"
        android:text="Ý Kiến : " />

    <EditText

        android:id="@+id/edtYKien"
        android:layout_toLeftOf="@+id/txtShowwYKien"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTieuDe"
        android:layout_toRightOf="@+id/txtTieuDe"
        android:layout_toEndOf="@+id/txtTieuDe" />


    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtYKien"
        android:layout_marginTop="20dp" />


</RelativeLayout>
