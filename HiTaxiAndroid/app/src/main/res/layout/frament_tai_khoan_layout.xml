<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgProfile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:src="@drawable/account"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp" />


            <RelativeLayout
                android:id="@+id/txtThongTin"
                android:layout_width="wrap_content"
                android:layout_below="@+id/imgProfile"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbht"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="Họ tên: "
                    android:textColor="#000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/txtHoTen"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/lbDiachi"

                    android:hint="Họ tên"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/lbsdt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txtHoTen"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="SĐT: "
                    android:textColor="#000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/txtSdt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbht"
                    android:layout_toRightOf="@+id/lbDiachi"

                    android:hint="Số điện thoại "
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/lbemail"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbsdt"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="Email: "
                    android:textColor="#000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txtSdt"
                    android:layout_toRightOf="@+id/lbDiachi"

                    android:hint="Email "
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/lbDiachi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/lbemail"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="Địa Chỉ: "
                    android:textColor="#000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/txtDiachi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txtEmail"
                    android:layout_toRightOf="@+id/lbDiachi"
                    android:hint="Địa chỉ "
                    android:textColor="#000" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtThongTin"
                android:layout_centerInParent="true"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btnCapNhatThongTin"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Sửa Thông Tin"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/btnDangNhapDangXuat"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/btnCapNhatThongTin"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Đăng Xuất"
                    android:textColor="#FFF" />
            </RelativeLayout>



</RelativeLayout>
    </ScrollView>